<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/technique"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/techniqueGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@id/creo"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" >
        <CheckBox
            android:id="@+id/creo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/creo" />
        <CheckBox
            android:id="@+id/intellego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intellego" />
        <CheckBox
            android:id="@+id/muto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/muto" />
        <CheckBox
            android:id="@+id/perdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perdo" />
        <CheckBox
            android:id="@+id/rego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rego" />
    </LinearLayout>

    <TextView
        android:id="@+id/summaryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/cast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/techniqueGroup" />

    <LinearLayout
        android:id="@+id/formGroup"
        android:checkedButton="@id/animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" >
        <CheckBox
            android:id="@+id/animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/animal" />
        <CheckBox
            android:id="@+id/aquam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aquam" />
        <CheckBox
            android:id="@+id/auram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auram" />
        <CheckBox
            android:id="@+id/corpus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/corpus" />
        <CheckBox
            android:id="@+id/herbam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/herbam" />
        <CheckBox
            android:id="@+id/ignem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ignem" />
        <CheckBox
            android:id="@+id/imaginem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imaginem" />
        <CheckBox
            android:id="@+id/mentem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mentem" />
        <CheckBox
            android:id="@+id/terram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terram" />
        <CheckBox
            android:id="@+id/vim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vim" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/fastCastCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/fast_cast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summaryView" />

    <RadioGroup
        android:id="@+id/modeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:checkedButton="@id/spontaneous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fastCastCheck">

        <RadioButton
            android:id="@+id/spontaneous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spontaneous" />

        <RadioButton
            android:id="@+id/fatigued"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fatigued" />

        <RadioButton
            android:id="@+id/diedne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diedne" />

        <RadioButton
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regular" />
    </RadioGroup>

    <Button
        android:id="@+id/castButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/cast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeGroup" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/castButton" />


</android.support.constraint.ConstraintLayout>